#include <iostream>

using namespace std;

class club
{
        private:

            char president[50];
            char secratry[50];
            char club[50];
            int members[];
        public:
                void input();
                void display();


};
void club::input()
{
        cout<<"Enter the name of president:";
        cin>>president;
        cout<<"Enter the name of secratry:";
        cin>>secratry;
        cout<<"Enter the name of club:";
        cin>>club;
        cout<<"Enter the members:";
        cin>>members;
}
void club::display()
{
        cout<<"\nPresident:"<<president;
        cout<<"\nsecratry:"<<secratry;
        cout<<"\nclub:"<<club;
        cout<<"\nmembers:"<<members;
}
int main()
{
        club a;
        a.input();
        a.display();
};
